{
  "firestore": {
    "rules": "packages/server/app/firestore.rules",
    "indexes": "packages/server/app/firestore.indexes.json"
  },
  "hosting": {
    "public": "dist/packages/portal-web/client/browser",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "codebase": "server-triggers",
      "source": "dist/packages/server/triggers",
      "runtime": "nodejs22",
      "ignore": ["*.local"]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "pubsub": {
      "port": 8085
    },
    "eventarc": {
      "port": 9299
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
