{
  "name": "legislative-tracker",
  "version": "0.8.4",
  "description": "A modern Progressive Web App for tracking legislative activity, built on Angular v20 and Firebase.",
  "homepage": "https://github.com/legislative-tracker/reimagined-parakeet#readme",
  "bugs": {
    "url": "https://github.com/legislative-tracker/reimagined-parakeet/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/legislative-tracker/reimagined-parakeet.git"
  },
  "license": "AGPL-3.0-only",
  "author": "jpelton-stroud",
  "type": "module",
  "scripts": {
    "postinstall": "npm install --prefix frontend && npm install --prefix backend/functions",
    "prebuild:backend": "npm run lint --prefix backend/functions && npm run test --prefix backend/functions",
    "build:backend": "npm run build --prefix backend/functions",
    "prebuild:frontend": "npm test --prefix frontend",
    "build:frontend": "npm run build --prefix frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "serve:backend": "npm run serve --prefix backend/functions",
    "serve:frontend": "npm run start --prefix frontend",
    "format:md": "prettier --write \"**/*.md\"",
    "lint": "npm run lint --prefix backend/functions",
    "test:backend": "npm run test --prefix backend/functions",
    "test:frontend": "npm run test --prefix frontend",
    "test": "vitest run",
    "release:dry": "standard-version --dry-run",
    "release": "standard-version",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.md": "prettier --write",
    "*.ts": "prettier --write"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "2.2.1",
    "@angular-devkit/build-angular": "20.0.0",
    "@angular-eslint/eslint-plugin": "^21.1.0",
    "@angular-eslint/eslint-plugin-template": "^21.1.0",
    "@angular-eslint/template-parser": "^21.1.0",
    "@angular/build": "20.0.0",
    "@angular/compiler-cli": "20.0.0",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@jpstroud/opencivicdata-types": "^1.0.3",
    "@nx/angular": "20.8.4",
    "@nx/esbuild": "20.8.4",
    "@nx/eslint-plugin": "^22.3.3",
    "@nx/vite": "20.8.4",
    "@nx/workspace": "20.8.4",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "@vitest/coverage-v8": "3.1.1",
    "@vitest/ui": "3.1.1",
    "angular-eslint": "^21.1.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "nx": "20.8.4",
    "prettier": "^3.7.4",
    "standard-version": "^9.5.0",
    "typescript-eslint": "^8.53.0",
    "vite": "6.4.1",
    "vitest": "3.1.1"
  },
  "dependencies": {
    "@angular/animations": "20.0.0",
    "@angular/cdk": "20.0.0",
    "@angular/common": "20.0.0",
    "@angular/compiler": "20.0.0",
    "@angular/core": "20.0.0",
    "@angular/fire": "20.0.0",
    "@angular/forms": "20.0.0",
    "@angular/material": "20.0.0",
    "@angular/platform-browser": "20.0.0",
    "@angular/platform-browser-dynamic": "20.0.0",
    "@angular/router": "20.0.0",
    "typescript": "5.8.3",
    "zone.js": "0.15.0"
  }
}
