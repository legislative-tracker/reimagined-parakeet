{
  "name": "legislative-tracker",
  "version": "0.8.4",
  "description": "A modern Progressive Web App for tracking legislative activity, built on Angular v20 and Firebase.",
  "homepage": "https://github.com/legislative-tracker/reimagined-parakeet#readme",
  "bugs": {
    "url": "https://github.com/legislative-tracker/reimagined-parakeet/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/legislative-tracker/reimagined-parakeet.git"
  },
  "license": "AGPL-3.0-only",
  "author": "jpelton-stroud",
  "type": "module",
  "scripts": {
    "postinstall": "npm install --prefix frontend && npm install --prefix backend/functions",
    "prebuild:backend": "npm run lint --prefix backend/functions && npm run test --prefix backend/functions",
    "build:backend": "npm run build --prefix backend/functions",
    "prebuild:frontend": "npm test --prefix frontend",
    "build:frontend": "npm run build --prefix frontend",
    "build": "npm run build:backend && npm run build:frontend",
    "serve:backend": "npm run serve --prefix backend/functions",
    "serve:frontend": "npm run start --prefix frontend",
    "format:md": "prettier --write \"**/*.md\"",
    "lint": "npm run lint --prefix backend/functions",
    "test:backend": "npm run test --prefix backend/functions",
    "test:frontend": "npm run test --prefix frontend",
    "test": "vitest run",
    "release:dry": "standard-version --dry-run",
    "release": "standard-version",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.md": "prettier --write",
    "*.ts": "prettier --write"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^2.2.0",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@vitest/coverage-v8": "3.0.9",
    "@vitest/ui": "3.0.9",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "standard-version": "^9.5.0",
    "vite": "^7.3.0",
    "vitest": "3.0.9"
  }
}
