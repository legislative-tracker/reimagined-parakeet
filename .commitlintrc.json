{
  "extends": ["@commitlint/config-conventional"],
  "helpUrl": "https://github.com/legislative-tracker/reimagined-parakeet/blob/main/README.md",
  "rules": {
    "type-enum": [
      2,
      "always",
      ["feat", "fix", "docs", "style", "refactor", "perf", "test", "build", "ci", "chore", "revert"]
    ],
    "scope-empty": [2, "never"],
    "scope-enum": [
      2,
      "always",
      [
        "portal-web",
        "server-firebase",
        "shared/data-models",
        "cli-config",
        "secrets-setup",
        "deps",
        "workflow",
        "workspace",
        "plugin-leg-us-ny"
      ]
    ],
    "subject-case": [0],
    "header-max-length": [2, "always", 100],
    "body-leading-blank": [2, "always"],
    "footer-leading-blank": [2, "always"]
  }
}
