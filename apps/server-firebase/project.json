{
  "name": "server-firebase",
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/server-firebase/src",
  "tags": ["type:app", "scope:backend"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/server-firebase",
        "main": "apps/server-firebase/src/index.ts",
        "tsConfig": "apps/server-firebase/tsconfig.app.json",
        "assets": ["apps/server-firebase/src/assets"],
        "format": ["esm"],
        "platform": "node",
        "target": "node24",
        "bundle": true,
        "external": ["firebase-admin", "firebase-functions"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "apps/server-firebase/vitest.config.ts"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "firebase emulators:start --only functions"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "firebase deploy --only functions"
      }
    },
    "lint": {
  "executor": "@nx/eslint:lint",
  "outputs": ["{options.outputFile}"],
  "options": {
    "eslintConfig": "apps/server-firebase/eslint.config.js",
    "lintFilePatterns": [
      "apps/server-firebase/**/*.ts"
    ]
  }
}
  }
}