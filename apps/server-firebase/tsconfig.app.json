{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "composite": true,
    "declaration": true,
    "rootDir": "../../",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "../../libs/shared/data-models/src/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
