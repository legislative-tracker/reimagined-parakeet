{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2022", "dom"],
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@reimagined-parakeet/shared/data-models": ["libs/shared/data-models/src/index.ts"],
      "@reimagined-parakeet/shared/plugins/legislatures/us-ny": [
        "libs/shared/plugins/legislatures/us-ny/src/index.ts"
      ],
      "@reimagined-parakeet/shared/util-ui": ["libs/shared/util-ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
