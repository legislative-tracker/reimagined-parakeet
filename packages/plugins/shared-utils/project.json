{
  "name": "plugin-shared-utils",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/plugins/shared-utils/src",
  "projectType": "library",
  "tags": ["type:util", "scope:shared", "firebase:dep:server-app"],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/plugins/shared-utils",
        "configFile": "packages/plugins/shared-utils/vite.config.ts"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../../coverage/packages/plugins/shared-utils"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  }
}
