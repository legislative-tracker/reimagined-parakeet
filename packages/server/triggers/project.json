{
  "name": "server-triggers",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/server/triggers/src",
  "projectType": "application",
  "tags": [
    "type:app",
    "scope:backend",
    "firebase:function",
    "firebase:name:server-triggers",
    "firebase:dep:server-app"
  ],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/server/triggers",
        "configFile": "packages/server/triggers/vite.config.ts",
        "ssr": true
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "config": "packages/server/triggers/vite.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run server-app:deploy --only functions:server-triggers"
      },
      "dependsOn": ["build"]
    }
  }
}
