{
  "name": "server-data-access",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/server/data-access/src",
  "projectType": "library",
  "tags": ["type:data-access", "scope:backend", "firebase:dep:server-app"],
  "// targets": "to see all targets run: nx show project server-data-access --web",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/server/data-access",
        "configFile": "packages/server/data-access/vite.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../../coverage/packages/server/data-access"
      }
    }
  }
}
