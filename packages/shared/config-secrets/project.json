{
  "name": "shared-config-secrets",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/shared/config-secrets/src",
  "projectType": "library",
  "tags": ["type:util", "scope:backend"],
  "// targets": "to see all targets run: nx show project shared-config-secrets --web",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/shared/config-secrets",
        "configFile": "packages/shared/config-secrets/vite.config.ts"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../../coverage/packages/shared/config-secrets"
      }
    }
  }
}
